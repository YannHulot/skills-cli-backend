{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/singleton.ts",
    "src/seed.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}